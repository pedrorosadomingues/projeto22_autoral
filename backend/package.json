{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "start": "npm run prisma:migrate:deploy && ts-node -r tsconfig-paths/register dist/server.js",
    "dev": "npx dotenv -e .env.development nodemon src/server.ts",
    "test": "npx dotenv -e .env.test npm run prisma:migrate:deploy && npx dotenv -e .env.test jest -- -i",
    "prisma:migrate:dev": "npx dotenv -e .env.development prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:seed": "npx dotenv -e .env.development prisma db seed"
  },
  "author": "Pedro Rosa Domingues",
  "license": "ISC",
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
